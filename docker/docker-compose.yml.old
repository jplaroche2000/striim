version: "3.7"
services:
  oracle-database:
    image: oracle/database:11.2.0.2-xe
    shm_size: 1g
    ports:
      - target: 1521
        published: 1521
        protocol: tcp
        mode: host
      - target: 8080
        published: 8080
        protocol: tcp
        mode: host
    volumes:
      - /home/oracle/scripts/setup:/u01/app/oracle/scripts/setup
      - /home/oracle/scripts/startup:/u01/app/oracle/scripts/startup
      - /home/oracle/oradata:/u01/app/oracle/oradata     
      - type: tmpfs
        target: /dev/shm
        tmpfs:
          size: 1073741824 # this means 1GB
    networks:
      - striim_oracle_net
    environment:
      ORACLE_PWD: "tiger"
  striim:
    image: striim/evalversion
    ports:
      - target: 9080
        published: 80
        protocol: tcp
        mode: host
    networks:
      - striim_oracle_net
    environment:
      STRIIM_ACCEPT_EULA: "Y"
      
networks:
  striim_oracle_net:
    driver: overlay

